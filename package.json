{
  "name": "razzle-examples-with-typescript",
  "version": "3.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "razzle start",
    "build": "razzle build",
    "start": "NODE_ENV=production node build/server.js",
    "lint": "eslint './src/**/*.ts*' './test/**/*.test.ts*' --cache",
    "prettier": "prettier  --ignore-path ./.prettierignore  **/*.ts*",
    "fix": "yarn prettier --write && yarn lint --fix",
    "test": "razzle test --env=jsdom --coverage",
    "postinstall": "npm run build",
    "check-rule": "yarn tsc && yarn lint && yarn prettier && yarn test"
  },
  "dependencies": {
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "md5": "^2.2.1",
    "pg": "^7.14.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^4.4.1",
    "yasintz-json-parser": "^1.0.14"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/md5": "^2.1.33",
    "@types/node": "^12.12.14",
    "@types/pg": "^7.11.2",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^4.4.0",
    "@types/supertest": "^2.0.8",
    "@types/webpack-env": "^1.14.1",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "prettier": "^1.19.1",
    "razzle": "^3.0.0",
    "razzle-plugin-typescript": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
