{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "strict": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "src",
    "esModuleInterop": true
  }
}
